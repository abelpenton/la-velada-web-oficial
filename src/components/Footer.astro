---
import X from "@/assets/svg/x.svg";
import Instagram from "@/assets/svg/instagram.svg";
---

<footer class="bg-[#1a1a1a] py-8 px-4">
  <div class="container mx-auto max-w-6xl">
    <div class="divider mb-8"></div>

    <div class="flex justify-between items-center">
      <div class="text-gray-400 text-sm flex gap-4">
        <span>© 2025 La Velada del Año</span>
        <span>Todos los derechos reservados</span>
        <a
            href="/aviso-legal"
            class="text-gray-400 hover:text-white transition-colors"
        >
          Aviso legal
        </a>
        <a
            href="/politica-privacidad"
            class="text-gray-400 hover:text-white transition-colors"
        >
          Política de privacidad
        </a>
      </div>

      <div class="flex gap-4">
        <a
            href="https://instagram.com/infoLaVelada"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Síguenos en Instagram"
            class="text-gray-400 hover:text-white transition-colors"
        >
          <Instagram class="size-6" />
        </a>
        <a
            href="https://x.com/infolavelada"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Síguenos en X"
            class="text-gray-400 hover:text-white transition-colors"
        >
          <X class="size-6" />
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .divider {
    height: 1px;
    background: linear-gradient(
        90deg,
        transparent 0%,
        rgba(128, 128, 128, 0.5) 25%,
        rgba(128, 128, 128, 0.5) 75%,
        transparent 100%
    );
  }
</style>