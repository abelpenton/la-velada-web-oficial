---
import X from "@/assets/svg/x.svg";
import Instagram from "@/assets/svg/instagram.svg";
import GitHub from "@/assets/svg/github.svg";
---

<footer class="relative w-full h-[400px]">
  <div
    class="absolute inset-0 bg-cover bg-bottom bg-[url('/images/footer.webp')]
    [mask-image:linear-gradient(transparent,black_50%)]"
  >
  </div>

    <div
        class="relative h-full flex flex-col justify-end items-center text-[#2a1f26] pb-8"
    >
      <div class="footer-content">
        <p class="text-center">© 2025 La Velada del Año. Todos los derechos reservados.</p>
      </div>

      <div class="flex flex-row gap-x-2 items-center justify-center mt-4">

       <a aria-label="Visitar perfil de InfoLaVelada en X" href="https://x.com/infolavelada" target="_blank"
          class="hover:scale-125 transition flex items-center justify-center">
            <X />
        </a>


        <a aria-label="Visitar perfil de InfoLaVelada en Instagram" href="https://instagram.com/infoLaVelada" target="_blank"
           class="hover:scale-125 transition flex items-center justify-center">
            <Instagram />
        </a>


        <a aria-label="Visitar repositorio de la Velada Oficial en GitHub" href="https://github.com/midudev/la-velada-web-oficial" target="_blank"
            class="hover:scale-125 transition flex items-center justify-center">
            <GitHub />
        </a>
      </div>
    </div>
</footer>