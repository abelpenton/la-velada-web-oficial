---
import { SPONSORS } from "@/consts/sponsors";

const firstRow = SPONSORS.slice(0, 3);
const secondRow = SPONSORS.slice(3, 6);
const thirdRow = SPONSORS.slice(6);
const infoJobsImage = SPONSORS.find(({id}) => id === "infojobs").image
---

<section class="bg-[#1a1a1a] py-16 px-4">
  <div class="container mx-auto max-w-5xl">
    <div class="text-center mb-4">
      <h2 class="text-white text-2xl font-medium uppercase mb-1">Patrocinadores</h2>
      <p class="text-gray-400 text-sm">La Velada podr√° llevarse a cabo gracias a su apoyo</p>
    </div>

    <div class="grid grid-cols-3 gap-8 mb-8">
      {
        firstRow.map(({ url, image, name, label }) => (
            <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={label ?? name}
                class="sponsor-card rounded-lg p-6 flex items-center justify-center hover:scale-105 transition-transform duration-300 group"
            >
              <image.logo
                  width={image.width}
                  height={image.width}
              />
            </a>
        ))
      }
    </div>

    <div class="grid grid-cols-3 gap-8 mb-8">
      {
        secondRow.map(({ url, image, name, label }) => (
            <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={label ?? name}
                class="sponsor-card rounded-lg p-6 flex items-center justify-center hover:scale-105 transition-transform duration-300 group"
            >
              <image.logo
                  width={image.width}
                  height={image.width}
              />
            </a>
        ))
      }
    </div>

    <div class="grid grid-cols-3 gap-8 mb-12">
      {
        thirdRow.map(({ url, image, name, label }) => (
            <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={label ?? name}
                class="sponsor-card rounded-lg p-6 flex items-center justify-center hover:scale-105 transition-transform duration-300 group"
            >
              <image.logo
                  width={image.width}
                  height={image.width}
              />
            </a>
        ))
      }
    </div>

    <div class="text-center">
      <p class="text-gray-500 text-sm flex items-center justify-center gap-2">
        Web Powered by
        <a
            href="https://infojobs.net"
            target="_blank"
            rel="noopener noreferrer"
            class="text-white hover:text-gray-300 transition-colors"
        >
          <infoJobsImage.logo
              width={100}
              height={100}
          />
        </a>
      </p>
    </div>
  </div>
</section>

<style>
  .sponsor-card {
    background: linear-gradient(to bottom, #111111 0%, #222222 100%);
    position: relative;
    overflow: hidden;
  }

  .sponsor-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.15) 100%);
    pointer-events: none;
  }
</style>